---
import DocumentMedia from "@document/DocumentMedia.astro";
import Photo from "@images/profile-picture-straight.jpg";
import type { ComponentProps } from "astro/types";

interface Props
  extends Omit<ComponentProps<typeof DocumentMedia>, "src" | "alt"> {}

const { ...props } = Astro.props;
---

<DocumentMedia
  src={Photo}
  alt="HIDDEN Portrait of Max Ludovico Hofer"
  class="!h-32"
  top
  aspect="1/1"
  {...props}
/>
