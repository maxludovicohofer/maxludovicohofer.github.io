---
import {
  getTextClass,
  type TextTag,
  type TextSize,
  type TextFormat,
} from "@integrations/tailwind";
import type { HTMLAttributes } from "astro/types";
import Translate from "./Translate.astro";
import { type I18nOptions } from "@integrations/i18n";

interface Props extends Omit<HTMLAttributes<TextTag>, "title"> {
  title?: boolean;
  subtitle?: boolean;
  markdown?: boolean;
  tag?: TextTag | undefined;
  importance?: TextSize | undefined;
  format?: TextFormat | undefined;
  noTranslation?: boolean;
  i18nOptions?: I18nOptions;
}

const {
  class: className = "",
  title,
  subtitle,
  markdown,
  tag,
  importance,
  format,
  noTranslation,
  i18nOptions,
  ...props
} = Astro.props;

const Element = tag ?? (markdown ? "div" : title ? "h1" : "p");

if (markdown) import("katex/dist/katex.min.css");

const dontTranslate = noTranslation ?? Element === "div";
---

<Element
  class={`${className} notranslate ${getTextClass(markdown ? "markdown" : (importance ?? (subtitle ? "small" : Element)), format ?? (title ? "heading" : subtitle ? "detail" : undefined))}`}
  {...props}
  >{
    dontTranslate ? (
      <slot />
    ) : (
      <Translate {...i18nOptions}>
        <slot />
      </Translate>
    )
  }</Element
>
