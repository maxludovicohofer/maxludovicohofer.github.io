---
import type { HTMLAttributes } from "astro/types";

interface Props extends Omit<HTMLAttributes<"div" | "b" | "u">, "title"> {
  title?: boolean;
  subtitle?: boolean;
  markdown?: boolean;
  tag?: "div" | "b" | "u" | "span" | undefined;
}

const {
  class: className = "",
  title,
  subtitle,
  markdown,
  tag,
  ...props
} = Astro.props;

const Element = tag ?? (markdown ? "div" : "p");

if (markdown) import("katex/dist/katex.min.css");
---

<Element
  class={`${className} ${title ? "text-balance text-zinc-950 dark:text-zinc-100 font-semibold" : subtitle ? "text-sm 2xl:text-xl text-zinc-400 leading-6" : "text-zinc-500 dark:text-zinc-300"} ${markdown ? "prose dark:prose-invert max-w-full prose-h1:font-semibold prose-h2:text-2xl prose-h2:2xl:text-3xl prose-h2:font-semibold prose-h3:text-xl prose-h3:2xl:text-3xl prose-h3:font-semibold prose-li:list-[kannada] prose-pre:rounded-3xl prose-pre:whitespace-pre-wrap prose-pre:text-xs prose-pre:sm:text-base prose-pre:2xl:text-2xl" : ""}`}
  {...props}><slot /></Element
>
