---
import type { HTMLAttributes } from "astro/types";

type TextTag = "div" | "b" | "u" | "span" | "h1" | "h2";

interface Props extends Omit<HTMLAttributes<TextTag>, "title"> {
  title?: boolean;
  subtitle?: boolean;
  markdown?: boolean;
  tag?: TextTag | undefined;
}

const {
  class: className = "",
  title,
  subtitle,
  markdown,
  tag,
  ...props
} = Astro.props;

const Element = tag ?? (markdown ? "div" : "p");

if (markdown) import("katex/dist/katex.min.css");
---

<Element
  class={`${className} ${title ? "text-balance text-zinc-950 dark:text-zinc-100 font-semibold" : subtitle ? "text-sm 2xl:text-xl text-zinc-400 leading-6" : "text-zinc-500 dark:text-zinc-300"} ${markdown ? "max-w-full prose dark:prose-invert empty:prose-p:hidden prose-headings:print:text-cyan-700 prose-headings:print:font-normal prose-h1:text-3xl prose-h1:2xl:text-4xl prose-h1:font-semibold prose-h1:-mb-2 prose-h2:text-2xl prose-h2:2xl:text-3xl prose-h2:font-semibold prose-h2:mt-10 prose-h2:mb-2 prose-h3:text-xl prose-h3:2xl:text-2xl prose-h3:font-semibold prose-h3:mt-0 prose-h3:mb-2 prose-li:list-[kannada] prose-li:marker:text-zinc-400 dark:prose-li:marker:text-zinc-500 prose-pre:rounded-3xl prose-pre:whitespace-pre-wrap prose-pre:text-xs prose-pre:sm:text-base prose-pre:2xl:text-2xl" : ""}`}
  {...props}><slot /></Element
>
