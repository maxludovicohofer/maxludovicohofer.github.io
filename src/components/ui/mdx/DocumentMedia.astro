---
import type { ComponentProps } from "astro/types";
import MarkdownMedia from "./MarkdownMedia.astro";

interface Props extends ComponentProps<typeof MarkdownMedia> {
  resolution?: number;
}

const { resolution = 7, ...props } = Astro.props;
---

<MarkdownMedia
  class="shadow-none !h-32"
  width={resolution * 32}
  loading="eager"
  {...props}
/>
