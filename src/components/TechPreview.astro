---
import PostPreview from "@layouts/PostPreview.astro";
import type { ComponentProps } from "astro/types";
import { title } from "@pages/tech.astro";
import TechList from "@components/TechList.astro";

interface Props {
  importance?: ComponentProps<typeof PostPreview>["importance"];
}

const { importance } = Astro.props;
---

<PostPreview importance={importance} readMore="tech" tag="div">
  <Fragment slot="title">{title}</Fragment>
  <TechList
    compact
    className="md:grid-cols-2 lg:grid-cols-1 2xl:grid-cols-2 gap-2"
  />
</PostPreview>
