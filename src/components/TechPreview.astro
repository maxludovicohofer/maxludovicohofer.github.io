---
import PostPreview from "@post/PostPreview.astro";
import type { ComponentProps } from "astro/types";
import TechList from "@components/TechList.astro";
import type { CollectionKey } from "astro:content";
import { capitalize } from "@integrations/text";

interface Props extends ComponentProps<typeof PostPreview> {}

const title: CollectionKey = "tech";
---

<PostPreview contentProps={{ tag: "div" }} readMore={title} {...Astro.props}>
  <Fragment slot="title">{capitalize(title)}</Fragment>
  <TechList compact class="grid-cols-2 gap-1" />
</PostPreview>
