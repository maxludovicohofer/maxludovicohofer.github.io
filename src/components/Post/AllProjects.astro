---
import ContentList from "@layouts/ContentList.astro";
import PostPreview from "@layouts/Post/PostPreview.astro";
import { title } from "@pages/projects/index.astro";
import type { ComponentProps } from "astro/types";

interface Props {
  importance?: ComponentProps<typeof PostPreview>["importance"];
}

const { importance } = Astro.props;

// TODO PHASE 2 ADD FILTER FOR PROJECT TYPE TO THE RIGHT OF TITLE, ALSO DEFAULT ORDER BY GAMES FIRST, THEN PROTOTYPES, THEN TOOLS
---

<PostPreview
  container
  class="mx-4 md:mx-0"
  readMore="projects"
  readMoreText="See all projects"
  readMoreClass="hidden md:inline"
  importance={importance}
>
  <Fragment slot="title">{title}</Fragment>
  <ContentList
    collection="projects"
    short
    class="md:grid-cols-2 2xl:grid-cols-1 -mx-4 md:mx-0 px-4 md:px-0"
  />
</PostPreview>
