---
import {
  getTitle,
  type getPostCover,
  type PostCollection,
} from "@layouts/Post/Post.astro";
import type { CollectionEntry } from "astro:content";
import PostMedia from "@components/Post/PostMedia.astro";
import type { ComponentProps } from "astro/types";

interface Props extends Omit<ComponentProps<typeof PostMedia>, "src" | "alt"> {
  cover: NonNullable<ReturnType<typeof getPostCover>>;
  entry: CollectionEntry<PostCollection>;
}

const { cover, entry, ...props } = Astro.props;

export function getCoverAlt(post: CollectionEntry<PostCollection>) {
  const title = getTitle(post)!;

  return post.collection === "projects"
    ? `${title} gameplay.`
    : `Graphic explanation of "${title}".`;
}
---

<PostMedia
  src={cover}
  alt={`HIDDEN ${getCoverAlt(entry)}`}
  loading="eager"
  {...props}
/>
