---
import PostMedia from "./PostMedia.astro";
import type { ComponentProps } from "astro/types";

interface Props extends ComponentProps<typeof PostMedia> {}

const { class: className = "", alt, ...props } = Astro.props;

const isEager = alt.includes("EAGER ");
---

<PostMedia
  alt={isEager ? alt.replace("EAGER ", "") : alt}
  class={`${className} h-[40vh] mt-12 -mb-2`}
  loading={isEager ? "eager" : undefined}
  {...props}
/>
