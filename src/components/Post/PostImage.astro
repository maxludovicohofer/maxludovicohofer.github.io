---
import Fullscreenable from "@layouts/Fullscreenable.astro";
import type { imageExtensions } from "@layouts/Post/Post.astro";
import { Image } from "astro:assets";

interface Props {
  src: {
    src: string;
    width: number;
    height: number;
    format: (typeof imageExtensions)[number];
  };
  alt: string;
}

const mediaClass = "size-full object-cover pointer-events-none";
---

<Fullscreenable className="rounded-3xl h-[40vh] -mb-4">
  <Image class={mediaClass} {...Astro.props} />
</Fullscreenable>
