---
import ContentList from "@components/ContentList.astro";
import Post from "@layouts/Post/Post.astro";
import { title } from "@pages/thoughts/index.astro";
import type { ComponentProps } from "astro/types";

interface Props {
  exclude?: ComponentProps<typeof ContentList>["exclude"];
  isNotFullpage?: boolean;
}

const { exclude, isNotFullpage } = Astro.props;
---

<Post container>
  <Fragment slot="title"
    >{isNotFullpage ? `Other ${title.toLowerCase()}` : title}</Fragment
  >
  <ContentList
    collection="thoughts"
    short
    disableHighlight
    class="md:grid-cols-1 xl:grid-cols-2"
    exclude={exclude}
    numberOfItemsToLoadEager={isNotFullpage ? undefined : 2}
  />
</Post>
