---
interface Props {
  href?: string | undefined;
  className?: string;
  openInCurrentPage?: boolean | undefined;
}

const { href, className = "", openInCurrentPage } = Astro.props;

const finalClass = `underline text-zinc-500 hover:text-yellow-400 active:text-yellow-500 dark:text-zinc-400 dark:hover:text-yellow-200 dark:active:text-yellow-400 hover:scale-125 active:scale-90 duration-150 ${className}`;

const target = openInCurrentPage ? "_self" : "_blank";
---

<a class={finalClass} href={href} target={target}>
  <slot />
</a>
