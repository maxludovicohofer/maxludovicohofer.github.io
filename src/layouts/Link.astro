---
interface Props {
  href?: string;
  className?: string;
}

const { href, className = "" } = Astro.props;

const finalClass = `underline text-zinc-500 hover:text-yellow-400 active:text-yellow-500 dark:text-zinc-400 dark:hover:text-yellow-200 dark:active:text-yellow-400 hover:scale-125 duration-50 ${className}`;
---

<a class={finalClass} href={href} target="_blank">
  <slot />
</a>
