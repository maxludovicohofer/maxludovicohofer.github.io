---
interface Props {
  className?: string;
  title?: boolean;
  subtitle?: boolean;
  markdown?: boolean;
  tag?: "div" | "b" | "u" | undefined;
}

const { className = "", title, subtitle, markdown, tag } = Astro.props;

const Element = tag ?? (markdown ? "div" : "p");

if (markdown) import("katex/dist/katex.min.css");
---

<Element
  class={`${className} ${title ? "text-balance text-zinc-950 dark:text-zinc-100 font-semibold" : subtitle ? "text-sm 2xl:text-xl text-zinc-400 leading-6" : "text-zinc-500 dark:text-zinc-300"} ${markdown ? "prose dark:prose-invert max-w-full prose-h1:font-semibold prose-h2:text-2xl prose-h2:font-semibold prose-li:list-[kannada] prose-a:font-normal prose-a:text-current hover:prose-a:text-2xl hover:prose-a:2xl:text-4xl active:prose-a:text-lg active:prose-a:2xl:text-2xl prose-img:rounded-3xl prose-img:object-cover prose-img:h-[40vh] prose-img:mt-12 prose-img:-mb-5" : ""}`}
>
  <slot />
</Element>
