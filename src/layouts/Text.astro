---
interface Props {
  className?: string;
  title?: boolean;
  subtitle?: boolean;
  markdown?: boolean;
  divTag?: boolean | undefined;
}

const { className = "", title, subtitle, markdown, divTag } = Astro.props;

const Element = divTag || markdown ? "div" : "p";

const finalClass = `${title ? "text-balance text-zinc-950 dark:text-zinc-100 font-semibold" : subtitle ? "text-sm 2xl:text-xl text-zinc-500 dark:text-zinc-400 leading-6" : "text-zinc-500 dark:text-zinc-300"} ${markdown ? "prose dark:prose-invert max-w-full prose-h1:font-semibold prose-h2:text-2xl prose-h2:font-semibold" : ""} ${className}`;
---

<Element class={finalClass}>
  <slot />
</Element>
