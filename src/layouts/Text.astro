---
interface Props {
  className?: string;
  title?: boolean;
  markdown?: boolean;
}

const { className = "", title, markdown } = Astro.props;

const Element = markdown ? "div" : "p";

const finalClass = `${title ? "text-balance text-zinc-950 dark:text-zinc-100 font-semibold" : "text-zinc-500 dark:text-zinc-300"} ${markdown ? "prose dark:prose-invert max-w-full prose-h1:font-semibold prose-h2:font-semibold" : ""} ${className}`;
---

<Element class={finalClass}>
  <slot />
</Element>
