---
interface Props {
  className?: string;
  title?: boolean;
}

const { className = "", title } = Astro.props;

const finalClass = `text-balance ${title ? "text-zinc-950 dark:text-zinc-100 font-semibold" : "text-zinc-500 dark:text-zinc-300"} ${className}`;
---

<p class={finalClass}>
  <slot />
</p>
