---
import type { ComponentProps } from "astro/types";
import DocumentHidden from "@components/ui/mdx/DocumentHidden.astro";
import MarkdownMedia from "@components/ui/mdx/MarkdownMedia.astro";
import DocumentText from "@layouts/document/DocumentText.astro";

interface Props extends ComponentProps<typeof DocumentText> {
  preview?: boolean;
}

const { class: className = "", preview, entryProps, ...props } = Astro.props;
---

<DocumentText
  class={`${className} ${props.entry ? "prose-li:list-[kannada]" : ""}`}
  entryProps={{
    components: { img: preview ? DocumentHidden : MarkdownMedia },
    ...entryProps,
  }}
  {...props}><slot /></DocumentText
>
