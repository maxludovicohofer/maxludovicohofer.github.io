---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";
import MarkdownMedia from "@post/MarkdownMedia.astro";
import MarkdownHidden from "@post/MarkdownHidden.astro";
import Link from "@ui/Link.astro";

interface Props {
  Content: AstroComponentFactory;
  preview?: boolean;
}

const { Content, preview } = Astro.props;
---

<Content
  components={{ a: Link, img: preview ? MarkdownHidden : MarkdownMedia }}
/>
