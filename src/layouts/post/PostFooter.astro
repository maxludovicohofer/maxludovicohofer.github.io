---
import { capitalize } from "@integrations/text";
import Text from "@ui/Text.astro";

interface Props {
  value: string | string[];
}

const { value } = Astro.props;
---

<Text tag="b"><slot /></Text>
<Text subtitle tag="span"
  >{capitalize(Array.isArray(value) ? value.join(", ") : value)}.</Text
>
