---
import Text from "@layouts/Text.astro";

interface Props {
  importance?: 1 | 2 | 3;
}

const { importance = 2 } = Astro.props;

const titleClass =
  importance == 1
    ? "text-3xl md:text-2xl 2xl:text-3xl"
    : "text-3xl 2xl:text-5xl";
---

{
  Astro.slots.has("header") && (
    <div class="text-sm 2xl:text-xl leading-6 mb-6">
      <slot name="header" />
    </div>
  )
}
<Text title className={titleClass}><slot name="title" /></Text>
<Text className="mt-6 text-xl 2xl:text-3xl"><slot /></Text>
