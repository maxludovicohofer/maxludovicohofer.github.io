---
import Text from "@layouts/Text.astro";
import type { CollectionEntry } from "astro:content";
import Button from "./Button.astro";
import { Image } from "astro:assets";
import { getLastModifiedTime, getPostImage } from "./Post.astro";
import type { ComponentProps } from "astro/types";

interface Props {
  entry?: CollectionEntry<"thoughts"> | CollectionEntry<"projects"> | undefined;
  descriptionAsBody?: boolean;
  readMore?: string;
  readMoreText?: string;
  noReadMore?: boolean;
  fullHeightReadMore?: boolean;
  minutesAlreadySpentReading?: number;
  importance?: 1 | 2 | 3 | undefined;
  tag?: ComponentProps<typeof Text>["tag"];
  hideDate?: boolean;
  container?: boolean;
}

const {
  importance = 2,
  entry,
  descriptionAsBody,
  readMore,
  readMoreText,
  noReadMore,
  fullHeightReadMore,
  tag,
  hideDate,
  container,
  minutesAlreadySpentReading = 0.5, // Time assumed to be already spent reading before clicking read more
} = Astro.props;

const { Content, remarkPluginFrontmatter } = entry ? await entry.render() : {};

const realMinutesToRead =
  remarkPluginFrontmatter &&
  remarkPluginFrontmatter.minutesRead - minutesAlreadySpentReading;

const minutesToRead =
  realMinutesToRead !== undefined && Math.max(Math.round(realMinutesToRead), 1);

const readMoreLink =
  noReadMore || (realMinutesToRead && realMinutesToRead < 0)
    ? undefined
    : (readMore ?? (entry && `/${entry.collection}/${entry.slug}`));

const lastModifiedTime =
  !hideDate &&
  getLastModifiedTime(remarkPluginFrontmatter)?.format("D MMMM YYYY");

const image = getPostImage(entry);

const description = entry
  ? entry.collection === "projects"
    ? entry.data.description
    : undefined
  : undefined;
---

{
  Astro.slots.has("header") && (
    <Text subtitle className="mb-6" tag="div">
      <slot name="header" />
    </Text>
  )
}
<Text
  title
  className={importance === 1
    ? "text-3xl lg:text-xl 2xl:text-3xl"
    : importance === 2
      ? "text-3xl 2xl:text-5xl"
      : "text-3xl lg:text-5xl 2xl:text-8xl"}
  >{entry?.data.title ?? <slot name="title" />}</Text
>
{
  lastModifiedTime && (
    <Text subtitle className="mt-0.5 xl:mt-3">
      {lastModifiedTime}
    </Text>
  )
}
<Text
  className={`${lastModifiedTime ? "mt-4" : Content || Astro.slots.has("title") ? "mt-6" : ""} text-xl 2xl:text-3xl ${container ? "max-h-[25.6rem]" : readMoreLink ? "max-h-72" : ""}`}
  markdown={!!Content}
  tag={tag ?? (container ? "div" : undefined)}
  >{
    descriptionAsBody && description ? (
      description
    ) : Content ? (
      <Content />
    ) : (
      <slot />
    )
  }</Text
>
{
  readMoreLink && (
    <Button
      cardButton
      className={`absolute bottom-0 left-0 ${fullHeightReadMore ? "h-full" : "h-1/3"}`}
      href={readMoreLink}
      navigate
      minimalStyle={fullHeightReadMore}
    >
      <div
        class={`size-full flex flex-col justify-end pb-5 ${container ? "group-hover/container-card:animate-pulse" : "group-hover/card:animate-pulse"} intersect:animate-pulse lg:intersect:animate-none intersect-full`}
      >
        {readMoreText ??
          (minutesToRead ? `Read in ${minutesToRead} min` : "Read more")}
        <br />â–¼
      </div>
    </Button>
  )
}
{
  image && (
    <Image
      src={image()}
      class={`absolute inset-0 size-full object-cover opacity-0 ${container ? "group-hover/container-card:opacity-15" : "group-hover/card:opacity-15"} intersect:opacity-15 lg:intersect:opacity-0 intersect-half duration-700 pointer-events-none`}
      alt={description ?? `Graphic explanation of "${entry!.data.title}"`}
    />
  )
}
