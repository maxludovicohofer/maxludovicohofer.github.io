---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";
import Link from "@ui/Link.astro";
import type { HTMLTag } from "astro/types";
import Text from "@components/ui/Text.astro";
import List from "@components/ui/List.astro";
import DocumentMedia from "@components/ui/mdx/DocumentMedia.astro";

interface Props {
  Content: AstroComponentFactory;
  components?: Partial<Record<HTMLTag, (args: any) => any>>;
  noTranslation?: boolean;
}

const { Content, components, noTranslation } = Astro.props;
---

<Content
  components={{
    a: Link,
    img: DocumentMedia,
    ...(noTranslation ? {} : { p: Text, ul: List }),
    ...components,
  }}
/>
