---
import type { ComponentProps } from "astro/types";
import DocumentMedia from "@document/DocumentMedia.astro";
import PostText from "@layouts/post/PostText.astro";

interface Props extends ComponentProps<typeof PostText> {}
---

<PostText
  class="font-['Segoe_UI'] prose-li:list-disc"
  contentProps={{ components: { img: DocumentMedia } }}
  {...Astro.props}
>
  <slot />
</PostText>
<style>
  @font-face {
    font-family: "Segoe UI";
    src:
      local("Segoe UI"),
      url(//c.s-microsoft.com/static/fonts/segoe-ui/west-european/normal/latest.woff2)
        format("woff2");
  }
</style>
