---
import type { ComponentProps } from "astro/types";
import PrintableMedia from "./PrintableMedia.astro";
import PostText from "@layouts/post/PostText.astro";

interface Props extends ComponentProps<typeof PostText> {}
---

<PostText
  class="prose-li:list-disc font-['Segoe_UI']"
  contentProps={{ components: { img: PrintableMedia } }}
  {...Astro.props}
>
  <slot />
</PostText>
<style>
  @font-face {
    font-family: "Segoe UI";
    src: url("/fonts/SegoeUI.ttf") format("ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
