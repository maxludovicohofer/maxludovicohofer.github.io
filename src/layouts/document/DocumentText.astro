---
import type { ComponentProps } from "astro/types";
import DocumentMedia from "@document/DocumentMedia.astro";
import PostText from "@layouts/post/PostText.astro";

interface Props extends ComponentProps<typeof PostText> {}

const { class: className = "", ...props } = Astro.props;
---

<PostText
  class={`${className} prose-li:list-disc`}
  entryProps={{ components: { img: DocumentMedia } }}
  {...props}
>
  <slot />
</PostText>
