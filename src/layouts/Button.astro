---
interface Props {
  inline?: boolean;
  readMore?: boolean;
  className?: string;
}

const { inline, readMore, className = "" } = Astro.props;

const finalClass = `${readMore ? "h-1/3 bg-gradient-to-t from-zinc-100 from-20% hover:from-yellow-300 active:from-yellow-400 dark:from-zinc-950 dark:hover:from-yellow-200 dark:active:from-yellow-300 text-zinc-950 hover:text-zinc-950 dark:text-zinc-100 dark:hover:text-zinc-950" : "rounded-lg h-11 2xl:h-16 bg-zinc-950 hover:bg-yellow-400 active:bg-yellow-500 dark:bg-zinc-100 dark:hover:bg-yellow-200 dark:active:bg-yellow-400 text-zinc-100 hover:text-zinc-950 dark:text-zinc-950 hover:scale-105 focus:ring-2 focus:ring-offset-2 focus:ring-inline-flex"} text-base 2xl:text-3xl font-semibold duration-50 ${inline ? "" : "w-full"} ${className}`;
---

<button type="button" class={finalClass}>
  {
    readMore ? (
      <div class="size-full flex flex-col justify-end pb-5 group-hover:animate-pulse intersect:animate-pulse lg:intersect:animate-none intersect-full">
        <slot />
      </div>
    ) : (
      <slot />
    )
  }
</button>
