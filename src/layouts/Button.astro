---
import Link from "./Link.astro";
import LinkButton from "./LinkButton.astro";

interface Props {
  inline?: boolean;
  cardButton?: boolean;
  className?: string;
  linkClassName?: string;
  href?: string | undefined;
  navigate?: boolean;
  rounded?: boolean;
  noFocus?: boolean;
  noShadow?: boolean;
  fullHeight?: boolean;
}

const { href, navigate, linkClassName = "", ...buttonProps } = Astro.props;
---

{
  href ? (
    <Link
      href={href}
      navigate={navigate}
      noStyle
      className={`${linkClassName} w-full`}
    >
      <LinkButton {...buttonProps}>
        <slot />
      </LinkButton>
    </Link>
  ) : (
    <LinkButton {...buttonProps}>
      <slot />
    </LinkButton>
  )
}
