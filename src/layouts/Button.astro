---
import Link from "./Link.astro";
import LinkButton from "./LinkButton.astro";

interface Props {
  inline?: boolean;
  cardButton?: boolean;
  className?: string;
  href?: string | undefined;
  navigate?: boolean;
  rounded?: boolean;
  noFocus?: boolean;
  noShadow?: boolean;
  fullHeight?: boolean;
}

const { href, navigate } = Astro.props;
---

{
  href ? (
    <Link href={href} navigate={navigate}>
      <LinkButton {...Astro.props}>
        <slot />
      </LinkButton>
    </Link>
  ) : (
    <LinkButton {...Astro.props}>
      <slot />
    </LinkButton>
  )
}
