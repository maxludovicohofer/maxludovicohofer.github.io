---
import type { ComponentProps } from "astro/types";
import Link from "./Link.astro";
import LinkButton from "./LinkButton.astro";

interface Props
  extends ComponentProps<typeof Link>,
    ComponentProps<typeof LinkButton> {
  linkClassName?: string;
}

const { href, navigate, linkClassName = "", ...buttonProps } = Astro.props;
---

{
  href ? (
    <Link
      href={href}
      navigate={navigate}
      noStyle
      className={`${linkClassName} w-full`}
    >
      <LinkButton {...buttonProps}>
        <slot />
      </LinkButton>
    </Link>
  ) : (
    <LinkButton {...buttonProps}>
      <slot />
    </LinkButton>
  )
}
