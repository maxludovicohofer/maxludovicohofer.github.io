---
import ViewTransitions from "astro/components/ViewTransitions.astro";
import BackButton from "@components/BackButton.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

const completeTitle = `Max Hofer \\ ${title}`;
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{completeTitle}</title>
    <meta name="title" content={completeTitle} />
    <meta name="description" content={description} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <ViewTransitions />
  </head>
  <body class="bg-zinc-200 dark:bg-zinc-950">
    <slot />
    {Astro.url.pathname !== "/" && <BackButton />}
    <script>
      // This code adds scroll restoration functionality
      document.addEventListener("astro:before-swap", () =>
        sessionStorage.setItem(location.pathname, JSON.stringify(history.state))
      );

      document.addEventListener("astro:after-swap", () => {
        const state = sessionStorage.getItem(location.pathname);

        if (state) {
          const { scrollX, scrollY } = JSON.parse(state) as {
            scrollX: number;
            scrollY: number;
          };

          scrollTo({ left: scrollX, top: scrollY, behavior: "instant" });
        }
      });
    </script>
    <script
      is:inline
      data-astro-rerun
      defer
      src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"
    ></script>
  </body>
</html>
