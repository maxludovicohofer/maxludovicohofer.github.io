---
import Card from "@layouts/Card.astro";
import { listPreviewContainerClass } from "./post/PostListPreview.astro";
---

<div
  class="grid grid-cols-1 lg:grid-cols-3 2xl:grid-cols-4 gap-4 p-4 min-h-screen"
>
  <Card><slot name="1-small" /></Card>
  <Card class="!p-0 lg:col-span-2 2xl:row-span-2 max-h-[80dvh]"
    ><slot name="2-medium" /></Card
  >
  <Card
    container
    class={`lg:row-span-3 lg:col-span-2 2xl:row-start-1 2xl:col-start-4 2xl:col-span-1 ${listPreviewContainerClass}`}
    ><slot name="3-large" /></Card
  >
  <Card
    class="lg:row-start-2 lg:col-start-3 2xl:row-start-3 2xl:col-start-2 2xl:col-span-2"
    ><slot name="4-small" /></Card
  >
  <Card container class={`lg:row-span-2 ${listPreviewContainerClass}`}
    ><slot name="5-medium" /></Card
  >
</div>
