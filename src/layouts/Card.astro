---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div" | "li"> {
  container?: boolean | undefined;
  tag?: "li";
}

const { container, class: className = "", tag, ...props } = Astro.props;

const Element = tag ?? "div";
---

<Element
  class={`${className} ${container ? "group/container-card rounded-b-3xl" : "group/card rounded-3xl shadow-md bg-zinc-100 dark:bg-zinc-900 p-8 2xl:p-12"} overflow-hidden relative`}
  {...props}><slot /></Element
>
