---
interface Props {
  container?: boolean | undefined;
  className?: string;
  tag?: "li";
}

const { container, className = "", tag } = Astro.props;

const Element = tag ?? "div";
---

<Element
  class={`${container ? "group/container-card rounded-b-3xl drop-shadow-md" : "group/card rounded-3xl shadow-md bg-zinc-100 dark:bg-zinc-900 p-8 2xl:p-12"} overflow-hidden relative ${className}`}
>
  <slot />
</Element>
