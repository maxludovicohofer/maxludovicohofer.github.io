---
interface Props {
  fill?: boolean;
  className?: string;
}

const { fill, className } = Astro.props;

const finalClass = `rounded-3xl bg-zinc-100 dark:bg-zinc-900 shadow-xl dark:shadow-dark overflow-hidden ${fill ? "" : "p-8 2xl:p-12"} ${className ?? ""}`;
---

<div class={finalClass}>
  <slot />
</div>
