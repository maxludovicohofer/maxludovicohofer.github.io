        techList.map(({ title, experience, items }) => (
          <tr>
            <td>{title}</td>
            <td class="text-right">
              {experience || (
                <ol class="list-none ps-0 my-0">
                  {items.map(({ experience }) => (
                    <li class="ps-0 my-0">{experience}</li>
                  ))}
                </ol>
              )}
            </td>
            <td>
              <ol class="list-none ps-0 my-0">
                {items.map(({ title }) => (
                  <li class="ps-0 my-0">{title}</li>
                ))}
              </ol>
            </td>
          </tr>
        ))
      }
    </tbody>
  </table>
  <h2>‚ñ†Ëá™Â∑±PR</h2>
  <p>{selfPRSentence}</p>
  <p class="text-right">‰ª•‰∏ä</p>
</DocumentPage>
