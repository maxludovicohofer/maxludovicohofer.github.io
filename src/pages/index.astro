---
import Page from "@layouts/Page.astro";
import Bento from "@layouts/Bento.astro";
import Profile from "@components/index/Profile.astro";
import Projects from "@components/index/Projects.astro";
import Opinions from "@components/index/Opinions.astro";
import { getEntry } from "astro:content";
import Video from "@layouts/Video.astro";
import PostPreview from "@layouts/PostPreview.astro";
import TechPreview from "@components/index/TechPreview.astro";

const style = await getEntry("thoughts", "style");
const highlightProject = await getEntry("projects", "steelsilk-championship");
const latestThought = await getEntry("thoughts", "debugging-fun");
const latestProject = await getEntry("projects", "hexelied");
---

<Page
  title="Game Designer"
  description="Max Hofer's game design portfolio and blog."
>
  <Bento>
    <Profile slot="1-medium" importance={1} />
    <Video
      slot="2-small"
      title="Showreel"
      youtubeID="m0KhK_J0LiQ"
      className="!aspect-[16/10]"
    />
    <PostPreview slot="3-small" content={style} hideDate />
    <PostPreview
      slot="4-large"
      content={highlightProject}
      importance={3}
      hideDate
    />
    <PostPreview slot="5-small" content={latestThought} />
    <PostPreview slot="6-medium" content={latestProject} importance={3} />
    <Projects slot="7-medium" />
    <TechPreview slot="8-small" importance={1} />
    <Opinions slot="9-large" />
  </Bento>
</Page>
