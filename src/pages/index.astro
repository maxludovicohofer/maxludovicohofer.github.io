import Bento from "@layouts/Bento.astro";
import Profile from "@components/index/Profile.astro";
import Showreel from "@components/index/Showreel.astro";
import Style from "@components/index/Style.astro";
import HighlightProject from "@components/index/HighlightProject.astro";
import Post from "@components/index/Post.astro";
