{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@ui/*": ["src/components/ui/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@post/*": ["src/layouts/post/*"],
      "@images/*": ["src/images/*"],
      "@integrations/*": ["src/integrations/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": ["youtube"]
  }
}
